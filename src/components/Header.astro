---
const { class: className } = Astro.props;
---

<div
  id="header"
  class:list={["text-black transition-all w-full gap-4 px-4", className]}
>
  <header
    class="max-w-[65ch]
      transition-all
      mx-auto px-4 py-4
      tracking-wider
      rounded-b-lg"
  >
    <nav>
      <ul class="list-none flex flex-row gap-4 items-center justify-start">
        <slot />
      </ul>
    </nav>
  </header>
</div>

---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, ...props } = Astro.props;
---

<a
  href={href}
  {...props}
  class="relative whitespace-nowrap overflow-hidden group flex flex-row gap-1"
>
  <slot />
  <div class="relative whitespace-nowrap overflow-hidden group flex flex-row">
    <div
      class="transform transition-transform duration-300 ease-in-out group-hover:-translate-y-full"
    >
      ↗
    </div>
    <div
      class="absolute inset-0 transform translate-y-full transition-transform duration-300 ease-in-out group-hover:translate-y-0"
    >
      ↗
    </div>
  </div>
</a>

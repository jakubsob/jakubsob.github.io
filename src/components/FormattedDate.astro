---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<span class="text-gray-500 text-sm uppercase">
  <time datetime={date.toISOString()}>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }
  </time>
</span>

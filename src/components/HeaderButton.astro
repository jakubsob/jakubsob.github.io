---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, id, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<li class:list={["flex items-baseline", className, { active: isActive }]}>
  <button
    id={id}
    class:list={[
      "rounded-full px-4 py-1 transition-all font-code font-bold uppercase tracking-wider",
    ]}
  >
    <a href={href} {...props}>
      <slot />
    </a>
  </button>
</li>

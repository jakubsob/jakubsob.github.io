---
import AnimatedLink from "./AnimatedLink.astro";
import { Section } from "@/components/ui/section";
import SubscribeButton from "@/components/SubscribeButton.astro";
import { getFooterRoutes, getSocialLinks } from "../lib/routes";

const today = new Date();

// Get routes automatically
const footerRoutes = getFooterRoutes();
const socialLinks = getSocialLinks();
---

<footer>
  <Section variant="dark">
    <div class="container mx-auto h-full flex flex-col justify-between">
      <div
        class="grid grid-cols-1 gap-20 lg:grid-cols-2 place-items-start
        h-full
        text-4xl
        py-40"
      >
        <div class="lg:justify-self-center flex flex-col gap-20">
          <div class="color-sky-400">
            <h1 class="text-white text-6xl uppercase">
              Learn efficient R development
            </h1>
          </div>
          <SubscribeButton class="bg-primary py-2 px-4 rounded-sm uppercase" />
        </div>
        <div class="lg:justify-self-center">
          <div class="flex flex-row gap-10">
            <div class="flex flex-col gap-4">
              <h2 class="text-ocean-green-100">Quick links</h2>
              <ul class="list-none text-sky-200 space-y-4">
                {
                  footerRoutes.map((route) => (
                    <li class="transition-colors hover:text-white">
                      <a href={route.path}>{route.label}</a>
                    </li>
                  ))
                }
              </ul>
            </div>
            <div class="flex flex-col gap-4">
              <h2 class="text-ocean-green-100">Let's connect</h2>
              <ul class="list-none text-sky-200 space-y-4">
                {
                  socialLinks.map((link) => (
                    <li class="transition-colors hover:text-white">
                      <AnimatedLink href={link.path} target="_blank">
                        {link.label}
                      </AnimatedLink>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center text-base text-sky-200 mt-auto">
        &copy; {today.getFullYear()} Jakub Sobolewski. All rights reserved.
      </div>
    </div>
  </Section>
</footer>

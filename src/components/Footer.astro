---
import AnimatedLink from "./AnimatedLink.astro";
import SubscribeButton from "./SubscribeButton.astro";
const today = new Date();
---

<footer class="bg-sky-700 bg-noise text-white h-[40vh] w-full">
  <div class="max-w-[65ch] mx-auto h-full flex flex-col justify-between">
    <div
      class="grid grid-cols-1 md:grid-cols-2
        justify-items-center align-start
        h-full
        text-xl
        px-4 py-12"
    >
      <div>
        <div class="h-20 color-sky-400">
          <h1 class="text-sky-200 text-2xl mb-1 font-syne">
            Learn efficient R development
          </h1>
          <SubscribeButton class:list="text-sm" />
        </div>
      </div>
      <div class="md:justify-self-end">
        <div class="flex flex-row gap-10">
          <ul class="list-none text-sky-200 space-y-4">
            <li class="transition-colors hover:text-white">
              <a href="/"> Home </a>
            </li>
            <li class="transition-colors hover:text-white">
              <a href="/blog"> Blog </a>
            </li>
          </ul>
          <ul class="list-none text-sky-200 space-y-4">
            <li class="transition-colors hover:text-white">
              <AnimatedLink
                href="https://www.linkedin.com/in/jakub-sobolewski-r/"
                target="_blank"
              >
                LinkedIn
              </AnimatedLink>
            </li>
            <li class="transition-colors hover:text-white">
              <AnimatedLink
                href="https://bsky.app/profile/jakub-sobolewski.bsky.social/"
                target="_blank"
              >
                Bluesky
              </AnimatedLink>
            </li>
            <li class="transition-colors hover:text-white">
              <AnimatedLink
                href="https://jakubsobolewski.medium.com/"
                target="_blank"
              >
                Medium
              </AnimatedLink>
            </li>
            <li class="transition-colors hover:text-white">
              <AnimatedLink
                href="https://www.github.com/jakubsob/"
                target="_blank"
              >
                Github
              </AnimatedLink>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="text-center text-base text-sky-200 mt-auto">
      &copy; {today.getFullYear()} Jakub Sobolewski. All rights reserved.
    </div>
  </div>
</footer>

---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <style is:global>
    main > section {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    hmtl {
      scroll-behavior: smooth;
    }
  </style>
  <BaseHead title={title} description={description} />
  <slot name="head" />
  <body>
    <slot />
  </body><Footer />
</html>

---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import HeaderDefault from "../components/HeaderDefault.astro";
---

<html lang="en">
  <head>
    <style is:global>
      html {
        scroll-behavior: smooth;
      }
    </style>
    <BaseHead
      {...{
        title: "Testing in R",
        description:
          "Learn how to effectively test in R and use tests to drive your development process.",
        ...Astro.props,
      }}
    />
    <HeaderDefault />
    <slot name="head" />
  </head>
  <body class="bg-sky-700">
    <slot />
    <Footer />
  </body>
</html>

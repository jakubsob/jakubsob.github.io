            <Bug className="inline size-[1em]" />
            <Rocket className="inline size-[1em]" />
          </p>
        </Animate>
      </h2>

      <Animate variant="expand" className="motion-delay-[1000ms]">
        <Subscribe variant="waitlist" />
      </Animate>
    </div>
  </Section>

